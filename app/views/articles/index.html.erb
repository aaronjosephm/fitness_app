

  <% @articles.each do |article| %>
    <div class="article-title-container">
      <div class="article-banner">
        <h1> Blog of the day: </h1>
        <h1><%= article.title.upcase %></h1>
        <p>TYLER ROSANO | <%= article.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>
    <div class="article-container">
      <p><%= article.content %></p>
      <p style="text-align: left !important; text-decoration: underline !important;">Leave a comment</p>
      <p style="text-align: left !important; text-decoration: underline !important;">View comments</p>
      <p style="text-align: left !important; text-decoration: underline !important;">Past blogs</p>
    </div>
  <% end %>


